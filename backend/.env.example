# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
MONGO_URI=mongodb://localhost:27017/greenrent
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/greenrent

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=1h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_REFRESH_EXPIRE=7d

# CORS
CLIENT_URL=http://localhost:3000

# IntaSend Payment Gateway
INTASEND_API_KEY=your_intasend_api_key
INTASEND_SECRET_KEY=your_intasend_secret_key
INTASEND_PUBLISHABLE_KEY=your_intasend_publishable_key
INTASEND_ENVIRONMENT=test
# Options: test, live

# AWS S3 (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=greenrent-media

# Cloudinary (Alternative for images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@greenrent.co.ke
FROM_NAME=GreenRent

# SMS (Africa's Talking or Twilio)
AFRICASTALKING_API_KEY=your_at_api_key
AFRICASTALKING_USERNAME=your_at_username
# OR Twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+254700000000

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
# 10MB in bytes

# Wallet Interest Rate
WALLET_INTEREST_RATE_FREE=0.005
# 0.5% monthly for free tier
WALLET_INTEREST_RATE_PREMIUM=0.01
# 1% monthly for premium tier

# Platform Fees
PLATFORM_FEE_PERCENTAGE=0.05
# 5% transaction fee
PAYMENT_PROCESSING_FEE=0.02
# 2% payment processing

# AI Service (Python FastAPI)
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your_ai_service_key

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_this

# Webhook URLs
WEBHOOK_BASE_URL=https://api.greenrent.co.ke
